<div class="container">
  <div class="row">
    <p>
      <strong>Name:</strong>
      <%= @event.name %>
    </p>

    <p>
      <strong>Time:</strong>
      <%= @event.time %>
    </p>

    <p>
      <strong>Deadline:</strong>
      <%= @event.deadline %>
    </p>
    <% @event.destinations.order('vote_count DESC').each do |place| %>
        <div class='place'>
          <div class='place_vote pull-right'> Vote:
            <%= link_to place.votes.count, votes_path(destination_id: place.id), method: :post, class: 'btn btn-primary' %>
          </div>
          <div class='place_title'><%= place.name %></div>
          <div class='place_address'><%= place.vicinity %></div>
        </div>
    <% end %>
  </div>
</div>

